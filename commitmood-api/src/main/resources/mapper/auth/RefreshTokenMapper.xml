<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.commitmood.security.mapper.RefreshTokenMapper">

    <resultMap id="RefreshTokenResultMap" type="com.ssafy.commitmood.domain.auth.entity.RefreshToken">
        <id property="id" column="id"/>
        <result property="userAccountId" column="user_account_id"/>
        <result property="token" column="token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO refresh_token (user_account_id, token, expires_at)
        VALUES (#{userAccountId}, #{token}, #{expiresAt})
    </insert>

    <select id="findByToken" resultMap="RefreshTokenResultMap">
        SELECT id, user_account_id, token, expires_at, created_at
        FROM refresh_token
        WHERE token = #{token}
    </select>

    <select id="findByUserAccountId" resultMap="RefreshTokenResultMap">
        SELECT id, user_account_id, token, expires_at, created_at
        FROM refresh_token
        WHERE user_account_id = #{userAccountId}
    </select>

    <delete id="deleteByUserAccountId">
        DELETE FROM refresh_token
        WHERE user_account_id = #{userAccountId}
    </delete>

    <delete id="deleteByToken">
        DELETE FROM refresh_token
        WHERE token = #{token}
    </delete>

    <delete id="deleteExpiredTokens">
        DELETE FROM refresh_token
        WHERE expires_at &lt; NOW()
    </delete>

</mapper>
